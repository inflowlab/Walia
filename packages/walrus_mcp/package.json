{
  "name": "Walia",
  "version": "1.0.0",
  "description": "SUI Walrus Seal",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "build:wallet": "tsc src/wallet-management.ts src/index.ts src/demo.ts --outDir dist",
    "watch": "tsc -w",
    "test": "vitest run",
    "test:wallet": "vitest run src/__tests__/wallet-management.test.ts src/__tests__/wallet-advanced.test.ts",
    "test:wallet:class": "vitest run src/__tests__/wallet-class.test.ts",
    "test:watch": "vitest",
    "demo": "tsx src/demo.ts",
    "create-dev-wallet": "tsx src/demo.ts # Usage: npm run create-dev-wallet -- --userName=walia --walletsDir=./dev-wallets --environment=testnet",
    "clean-wallets": "tsx src/clean-wallets.ts # Usage: npm run clean-wallets",
    "clean-wallets:dry": "tsx src/clean-wallets.ts --dry-run # Check what would be deleted without removing files",
    "clean-wallets:all": "tsx src/clean-wallets.ts --include-dev # Also clean development wallets",
    "mcp-server": "node dist/mcp-server.js",
    "mcp-server:dev": "tsx src/mcp-server.ts",
    "mcp-server:build": "tsc && node dist/mcp-server.js",
    "mcp-server:watch": "tsc -w",
    "test-mcp": "node test-mcp-client.js",
    "cli": "tsx src/cli.ts",
    "cli:build": "tsc && node dist/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^1.3.1",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@mysten/seal": "^0.4.15",
    "@mysten/sui": "^1.30.0",
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0"
  }
}
