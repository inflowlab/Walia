{
  "name": "walia-monorepo",
  "version": "1.0.0",
  "description": "Walia project monorepo containing TypeScript and Move components",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/typescript",
    "build:move": "cd packages/move/walia_move && sui move build",
    "test": "npm run test --workspace=packages/typescript",
    "test:move": "cd packages/move/walia_move && sui move test",
    "dev": "npm run dev --workspace=packages/typescript",
    "clean": "npm run clean --workspace=packages/typescript",
    "clean-wallets": "npm run clean-wallets --workspace=packages/typescript",
    "create-dev-wallet": "npm run create-dev-wallet --workspace=packages/typescript",
    "install:all": "npm install && npm install --workspace=packages/typescript"
  },
  "keywords": [
    "sui",
    "move",
    "blockchain",
    "web3",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
